<%= link_to group_path(group) do %>
  <div id="group" class='grid-display'>
    <div class='img-div'>
      <%= image_tag group.icon %>
    </div>

    <div class='group-info' class='grid-display'>
      <h3><%= group.name %></h3>
      <p id='date'><%= group.created_at.strftime("%d %b %Y") %></p>
    </div>

    <p>
      $<%= group.entities.sum(:amount) %>
    </p>

  </div>
<% end %>
